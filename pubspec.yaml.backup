name: ledger_master
description: "Cross-platform ledger & accounting app (scaffold step 1)"
publish_to: "none"
version: 1.0.0+1

environment:
  sdk: ">=3.9.0 <4.0.0"

dependencies:
  csv: ^6.0.0
  excel: ^4.0.0
  fl_chart: ^1.0.0
  flutter:
    sdk: flutter
  flutter_screenutil: ^5.9.3
  flutter_staggered_grid_view: ^0.7.0
  get: ^4.7.2
  google_fonts: ^7.0.2
  intl: ^0.20.2
  path: ^1.9.1
  path_provider: ^2.1.3
  pdf: ^3.11.3
  printing: ^5.10.3
  responsive_framework: ^1.5.1
  sentry_flutter: ^9.9.2
  shared_preferences: ^2.5.3
  sqflite: ^2.4.0
  sqflite_common_ffi: ^2.3.6
  syncfusion_flutter_datagrid: ^32.1.23
  url_launcher: ^6.2.10
  window_manager: ^0.5.1

dev_dependencies:
  drift_dev: ^2.14.0
  flutter_lints: ^6.0.0
  flutter_test:
    sdk: flutter
  freezed: any
  json_serializable: any
  sentry_dart_plugin: ^3.2.1

flutter:
  uses-material-design: true
  assets:
    - assets/images/icon.png
    - assets/fonts/Montserrat-Regular.ttf
    - assets/fonts/Montserrat-Bold.ttf
